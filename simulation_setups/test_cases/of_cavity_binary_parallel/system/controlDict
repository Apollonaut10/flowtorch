FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.005;

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    volFieldSums
    {
        type            volFieldValue;
        libs            (fieldFunctionObjects);

        fields          (U p);
        operation       sum;
        regionType      all;

        postOperation   none;
        writeFields     false;
        scalingFactor   1.0;
        writePrecision  8;
        writeToFile     true;
        enabled         true;
        log             false;
        timeStart       0;
        timeEnd         1000;
        executeControl  writeTime;
        executeInterval 1;
        writeControl    writeTime;
        writeInterval   1;
    }
}

